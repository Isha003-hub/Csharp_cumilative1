@model Assignment__cumilative_1_csharp.Models.Student

<div id="containershow">
    <nav>
        <a class="navlink" href="/StudentPage/SShow/@Model.Student_Id">Back</a>
    </nav>
    <h2>New Student</h2>
    <form method="POST" action="/StudentPage/Update/@Model.Student_Id">
        <div class="inputrow">
            <label for="First_Name">First Name:</label>
            <input type="text" id="First_Name" name="First_Name" value="@Model.First_Name" />

        </div>
        <div class="inputrow">
            <label for="Last_Name">Last Name:</label>
            <input type="text" id="Last_Name" name="Last_Name" value="@Model.Last_Name" />

        </div>
        <div class="inputrow">
            <label for="Student_Num">StudentNumber:</label>
            <input type="text" id="Student_Num" name="Student_Num" value="@Model.Student_Num" />
        </div>
        <div class="inputrow">
            <label for="S_Enroll_Date">Enrolment Date:</label>
            <input type="datetime" id="S_Enroll_Date" name="S_Enroll_Date" value="@Model.S_Enroll_Date" />
        </div>
        <div class="inputrow">
            <input type="submit" value="Update Student" />
        </div>
    </form>
</div>
