@model IEnumerable<Assignment__cumilative_1_csharp.Models.Student>

<!-- A link is added that will redirect to another Form page where there is a form to add a new teacher-->

<h1>List Of Students</h1>
<a style="margin-bottom:10px;" href="/StudentPage/SNew">Add Student</a>

<!-- Displaying all the Student (first name and last name) on the webpage as link where you can select any teacher for their further details -->
@foreach (Assignment__cumilative_1_csharp.Models.Student Student in Model)
{
    <div class="list">
        <a href="/StudentPage/SShow/@Student.Student_Id">@Student.First_Name @Student.Last_Name</a>
    </div>
}

<style>
    /* Page container styling */
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Header styling */
    h1 {
        text-align: center;
        font-size: 2rem;
        color: #333;
        margin-bottom: 20px;
    }

    main {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Add Teacher link styling */
    .add-teacher-link {
        display: inline-block;
        margin-bottom: 20px;
        padding: 10px 15px;
        font-size: 1rem;
        color: #fff;
        background-color: #4CAF50;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s, transform 0.2s;
    }

        .add-teacher-link:hover {
            background-color: #45a049;
            transform: scale(1.05);
        }

    /* Teacher list item container styling */
    .teacher-item {
        margin-bottom: 10px;
    }

        /* Teacher link styling */
        .teacher-item a {
            display: block;
            padding: 10px 15px;
            text-decoration: none;
            color: #000;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .teacher-item a:hover {
                background-color: #ddd;
                box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
                color: #000;
            }
</style>