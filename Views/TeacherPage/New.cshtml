﻿<!-- This is a form that contains all the inouts required to add a new teacher -->
﻿<div id="container">

    <nav>
        <!-- A link to go back to the list of all teachers -->
        <a class="navlink" href="/TeacherPage/List">Back To Teachers</a>
    </nav>

    <h2>Add a New Teacher</h2>

    <!-- Here, action is not directing to another web page but just creating the teacher and adding it to database -->
    <!-- Method is post because we don't want the details of the teacher to be part of the URL -->
    <form method="POST" action="/TeacherPage/Create">
        <div class="inputrow">
            <label for="First_name">First Name:</label>
            <input type="text" id="First_name" name="First_name" />

        </div>
        <div class="inputrow">
            <label for="Last_Name">Last Name:</label>
            <input type="text" id="Last_Name" name="Last_Name" />

        </div>
        <div class="inputrow">
            <label for="HireDate">Hire Date:</label>
            <input type="date" id="HireDate" name="HireDate" />

        </div>
        <div class="inputrow">
            <label for="Emp_Num">Employee Number:</label>
            <input type="text" id="Emp_Num" name="Emp_Num" maxlength="4" />

        </div>
        <div class="inputrow">
            <label for="Salary">Salary:</label>
            <input type="number" id="Salary" name="Salary" />

        </div>
        <div class="inputrow">
            <input type="submit" value="Create Teacher" />
        </div>
    </form>
</div>

